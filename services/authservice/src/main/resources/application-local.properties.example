# Local Development Configuration
# Copy this file to application-local.properties and fill in your credentials
# application-local.properties is gitignored and should NOT be committed
# 
# To use this file, run with: --spring.profiles.active=local

# Primary MongoDB connection for auth/users
spring.data.mongodb.uri=mongodb+srv://username:password@cluster.mongodb.net/localEAD?retryWrites=true&w=majority

# Employee Details MongoDB connection
spring.data.mongodb.employee.uri=mongodb+srv://username:password@cluster.mongodb.net/EAD-Employes?retryWrites=true&w=majority
spring.data.mongodb.employee.database=EAD-Employes

